<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1><%= story && story.title ? story.title : 'Untitled Story' %></h1>
      <img
        src="<%= (story && story.coverImage) ? story.coverImage : '/images/placeholder.jpg' %>"
        class="cover"
        alt="Cover image for <%= story && story.title ? story.title : 'story' %>"
      />
      <p><%= story && story.description ? story.description : '' %></p>

      <div class="actions">
        <a href="/u/play/<%= story._id %>/start" class="cta-button"
          >Start from Beginning</a
        >
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
