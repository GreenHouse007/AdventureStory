<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1 class="title">Add Node to <%= story.title %></h1>
      <form
        method="post"
        action="/admin/stories/<%= story._id %>/nodes/add"
        class="panel stack"
      >
        <label>Node ID (unique string)</label>
        <input type="text" name="_id" required />

        <label>Text</label>
        <textarea name="text" rows="4" required></textarea>

        <label>Image URL</label>
        <input type="text" name="image" />

        <button type="submit" class="cta-button">Add Node</button>
      </form>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
