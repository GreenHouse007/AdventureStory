<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <div class="back-link">
        <a href="/admin/stories/<%= story._id %>/edit" class="cta-button small"
          >← Back to Story</a
        >
      </div>

      <h1 class="title">Edit Node: <%= node._id %></h1>

      <form
        method="post"
        action="/admin/stories/<%= story._id %>/nodes/<%= node._id %>/edit"
        class="panel stack"
      >
        <label>Node ID</label>
        <input type="text" name="_id" value="<%= node._id %>" required />

        <label>Text</label>
        <textarea name="text" rows="4" required><%= node.text %></textarea>

        <label>Image URL</label>
        <input type="text" name="image" value="<%= node.image || '' %>" />

        <button type="submit" class="cta-button">Save Node</button>
      </form>

      <section class="panel">
        <h2>Choices</h2>

        <% if (node.choices.length === 0) { %>
        <p>No choices yet.</p>
        <% } else { %>
        <ul>
          <% node.choices.forEach(c => { %>
          <li>
            <strong><%= c.label %></strong> → <em><%= c.nextNodeId %></em>
            <form
              action="/admin/stories/<%= story._id %>/nodes/<%= node._id %>/choices/<%= c._id %>/delete"
              method="post"
              class="inline-form"
              onsubmit="return confirm('Delete this choice?');"
            >
              <button type="submit" class="cta-button danger small">
                Delete
              </button>
            </form>
          </li>
          <% }) %>
        </ul>
        <% } %>

        <form
          action="/admin/stories/<%= story._id %>/nodes/<%= node._id %>/choices/add"
          method="post"
          class="stack"
        >
          <label>Choice Label</label>
          <input type="text" name="label" required />

          <label>Next Node / Ending ID</label>
          <input type="text" name="nextNodeId" required />

          <button type="submit" class="cta-button small">Add Choice</button>
        </form>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
