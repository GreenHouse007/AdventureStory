<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1 class="title">Manage Users</h1>

      <div class="top-actions">
        <a href="/admin" class="back-link">&larr; Back to Dashboard</a>
      </div>

      <!-- Search bar + Add User -->
      <div class="toolbar">
        <form method="get" action="/admin/users" class="search-bar">
          <input
            type="text"
            name="q"
            placeholder="Search by name or email"
            value="<%= q %>"
          />
          <button type="submit">Search</button>
        </form>

        <a href="/admin/users/add" class="cta-button">+ Add User</a>
      </div>

      <table class="admin-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Currency</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
          <tr>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
            <td><%= u.role %></td>
            <td><%= u.currency || 0 %></td>
            <td class="actions">
              <a href="/admin/users/<%= u._id %>" class="cta-button small"
                >View</a
              >
              <form
                action="/admin/users/<%= u._id %>/delete"
                method="post"
                class="inline-form"
                onsubmit="return confirm('Delete this user? This cannot be undone.');"
              >
                <button type="submit" class="cta-button danger small">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>

    <style>
      .top-actions {
        margin-bottom: 1rem;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        border: 1px solid #cfcfcf;
        color: #333;
        text-decoration: none;
        font-size: 0.9rem;
        transition: background 0.2s ease, color 0.2s ease;
      }

      .back-link:hover {
        background: #f2f2f2;
      }
    </style>
  </body>
</html>
