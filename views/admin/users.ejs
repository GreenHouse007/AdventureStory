<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1 class="title">Manage Users</h1>

      <!-- Search bar + Add User -->
      <div class="toolbar">
        <form method="get" action="/admin/users" class="search-bar">
          <input
            type="text"
            name="q"
            placeholder="Search by name or email"
            value="<%= q %>"
          />
          <button type="submit">Search</button>
        </form>

        <a href="/admin/users/add" class="cta-button">+ Add User</a>
      </div>

      <table class="admin-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Currency</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
          <tr>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
            <td><%= u.role %></td>
            <td><%= u.currency || 0 %></td>
            <td class="actions">
              <a href="/admin/users/<%= u._id %>" class="cta-button small"
                >View</a
              >
              <form
                action="/admin/users/<%= u._id %>/delete"
                method="post"
                class="inline-form"
                onsubmit="return confirm('Delete this user? This cannot be undone.');"
              >
                <button type="submit" class="cta-button danger small">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
