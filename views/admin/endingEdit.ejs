<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
  <div class="back-link">
    <a href="/admin/stories/<%= story._id %>/edit" class="cta-button small">‚Üê Back to Story</a>
  </div>

  <h1 class="title">Edit Ending: <%= ending._id %></h1>

  <form method="post" action="/admin/stories/<%= story._id %>/endings/<%= ending._id %>/edit" class="panel stack">
    <label>Ending ID</label>
    <input type="text" name="_id" value="<%= ending._id %>" required>

    <label>Label</label>
    <input type="text" name="label" value="<%= ending.label %>" required>

    <label>Type</label>
    <select name="type">
      <option value="true" <%= ending.type === "true" ? "selected" : "" %>>True Ending</option>
      <option value="death" <%= ending.type === "death" ? "selected" : "" %>>Death</option>
      <option value="other" <%= ending.type === "other" ? "selected" : "" %>>Other</option>
    </select>

    <label>Text</label>
    <textarea name="text" rows="4" required><%= ending.text %></textarea>

    <label>Image URL</label>
    <input type="text" name="image" value="<%= ending.image || '' %>">

    <button type="submit" class="cta-button">Save Ending</button>
  </form>
</main>


    <%- include('../partials/footer') %>
  </body>
</html>
