<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1 class="title">Add Ending to <%= story.title %></h1>
      <form
        method="post"
        action="/admin/stories/<%= story._id %>/endings/add"
        class="panel stack"
      >
        <label>Ending ID (unique string)</label>
        <input type="text" name="_id" required />

        <label>Label</label>
        <input type="text" name="label" required />

        <label>Type</label>
        <select name="type">
          <option value="true">True Ending</option>
          <option value="death">Death</option>
          <option value="other" selected>Other</option>
        </select>

        <label>Text</label>
        <textarea name="text" rows="4" required></textarea>

        <label>Image URL</label>
        <input type="text" name="image" />

        <button type="submit" class="cta-button">Add Ending</button>
      </form>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
