<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1 class="title">Add Story</h1>
      <form action="/admin/stories/add" method="post" class="panel stack">
        <label>Title</label>
        <input type="text" name="title" required />

        <label>Description</label>
        <textarea name="description" rows="4" required></textarea>

        <label>Cover Image URL</label>
        <input type="text" name="coverImage" />

        <label>Status</label>
        <select name="status">
          <option value="public">Public</option>
          <option value="coming_soon" selected>Coming Soon</option>
        </select>

        <label>Categories</label>
        <div class="category-options">
          <% if (Array.isArray(categories) && categories.length) { %>
            <% categories.forEach(function(cat) { %>
              <label class="category-pill">
                <input type="checkbox" name="categories" value="<%= cat %>" />
                <span><%= cat %></span>
              </label>
            <% }) %>
          <% } else { %>
            <p class="muted">No categories configured.</p>
          <% } %>
        </div>

        <button type="submit" class="cta-button">Create Story</button>
      </form>
    </main>

    <%- include('../partials/footer') %>

    <style>
      .category-options {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .category-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.7rem;
        border-radius: 999px;
        background: #f0f0f0;
        border: 1px solid #d0d0d0;
        font-size: 0.9rem;
      }

      .category-pill input[type='checkbox'] {
        accent-color: #4f46e5;
      }
    </style>
  </body>
</html>
