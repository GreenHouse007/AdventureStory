<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <h1 class="title">Add Story</h1>
      <form action="/admin/stories/add" method="post" class="panel stack">
        <label>Title</label>
        <input type="text" name="title" required />

        <label>Description</label>
        <textarea name="description" rows="4" required></textarea>

        <label>Cover Image URL</label>
        <input type="text" name="coverImage" />

        <label>Status</label>
        <select name="status">
          <option value="public">Public</option>
          <option value="coming_soon" selected>Coming Soon</option>
        </select>

        <button type="submit" class="cta-button">Create Story</button>
      </form>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
