<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/header', { user }) %>

    <main class="container">
      <div class="back-link">
        <a href="/admin/stories/<%= story._id %>/edit" class="cta-button small"
          >‚Üê Back to Story</a
        >
      </div>

      <h1 class="title">Image Library for <%= story.title %></h1>

      <form
        action="/admin/stories/<%= story._id %>/images/upload"
        method="post"
        enctype="multipart/form-data"
        class="panel stack"
      >
        <label>Upload new image</label>
        <input type="file" name="image" accept="image/*" required />
        <button type="submit" class="cta-button">Upload</button>
      </form>

      <section class="gallery">
        <% if (images.length === 0) { %>
        <p>No images uploaded yet.</p>
        <% } else { %>
        <ul class="image-grid">
          <% images.forEach(imgObj => { const src = imgObj.url || imgObj; const
          pid = imgObj.publicId || ''; %>
          <li class="image-item">
            <img src="<%= src %>" alt="Story image" />
            <div class="image-actions">
              <input
                type="text"
                value="<%= src %>"
                readonly
                class="image-url"
              />
              <div class="row">
                <button
                  type="button"
                  class="copy-btn"
                  onclick="copyToClipboard('<%= src %>')"
                >
                  Copy URL
                </button>

                <form
                  action="/admin/stories/<%= story._id %>/images/delete"
                  method="post"
                  onsubmit="return confirm('Delete this image?');"
                >
                  <input type="hidden" name="url" value="<%= src %>" />
                  <input type="hidden" name="publicId" value="<%= pid %>" />
                  <button type="submit" class="copy-btn danger">Delete</button>
                </form>
              </div>
            </div>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </section>
    </main>

    <script>
      function copyToClipboard(text) {
        navigator.clipboard
          .writeText(text)
          .then(() => {
            alert("Copied to clipboard: " + text);
          })
          .catch((err) => {
            console.error("Failed to copy: ", err);
          });
      }
    </script>

    <style>
      .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        list-style: none;
        padding: 0;
      }
      .image-item {
        border: 1px solid #ccc;
        padding: 0.5rem;
        background: #fafafa;
        text-align: center;
        border-radius: 6px;
      }
      .image-item img {
        max-width: 200px;
        height: auto;
        border-radius: 4px;
      }
      .image-actions {
        margin-top: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }
      .image-url {
        font-size: 0.8rem;
        text-align: center;
        border: none;
        background: #eee;
        padding: 0.25rem;
        border-radius: 3px;
      }
      .copy-btn {
        background: #333;
        color: #fff;
        border: none;
        padding: 0.25rem 0.5rem;
        border-radius: 3px;
        cursor: pointer;
      }
      .copy-btn:hover {
        background: #555;
      }

      .image-actions .row {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        margin-top: 0.25rem;
      }
      .copy-btn.danger {
        background: #7a1f1f;
      }
      .copy-btn.danger:hover {
        background: #a12a2a;
      }
    </style>

    <%- include('../partials/footer') %>
  </body>
</html>
